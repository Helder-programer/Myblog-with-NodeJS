<form action="" method="get" id="search-form">
    <a class="btn btn-primary" href ="/cadastrar"><i class="fa-solid fa-plus" style="margin-right:5px;"></i>Cadastrar</a>
    <input class="form-control" name="search_input" type="text" placeholder="Digite o que deseja pesquisar..." value="{{postToFilter}}" autocomplete="off">
    <button><i class="fa-solid fa-magnifying-glass"></i></button>
</form>
<h1>Posts Criados</h1>
{{#each post}}
<div class="post">
    <small>Data de criação: {{{formatDate createdAt}}}</small>
    <h1>{{titulo}}</h1>
    <p>{{conteudo}}</p>
    <a href="/editar/{{id}}" class="btn btn-success">Editar</a>
    <a href="/deletar/{{id}}"  class="btn btn-danger">Deletar</a>
</div>
{{/each}}